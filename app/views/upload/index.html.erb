<div class="row">
  <div class="col-md-6">
    <h1>Cleartext Wordlist: </h1>
    <div class="well">
      <%= form_tag({:action => :upload_wordlist}, :multipart => true) do %>
      <%= label_tag "Select File:" %>
      <%= file_field_tag 'wordlist', :accept => 'text/plain', :id => 'wordlistUpload' %>
      <br>
      <%= label_tag "Source:" %><br>
      <%= text_field_tag 'source' %>
      <br>
      <small>Note: Source can be the assessment name, machine name or domain name</small>
      <br />
      <br />
      <%= submit_tag "Upload", class: "btn btn-primary", id: "upload_wordlist" %>
      <% end %>
    </div>
  </div>
  <div class="col-md-6">
    <!-- Future Uploader-->
  </div>
</div>
